{
    "$schema": "https://schema.management.azure.com/schemas/0.1.2-preview/CreateUIDefinition.MultiVm.json#",
    "handler": "Microsoft.Compute.MultiVm",
    "version": "0.1.2-preview",
    "parameters": {
        "basics": [],
        "steps": [
            {
                "name": "AzureMonitor",
                "label": "Azure Monitor",
                "subLabel": {
                    "preValidation": "Enter desired resources",
                    "postValidation": "Done"
                },
                "bladeTitle": "Route Data",
                "elements": [
                    {
                        "name": "StorageAcctName",
                        "type": "Microsoft.Common.TextBox",
                        "label": "Storage Account Name",
                        "toolTip": "Archive to a storage account",
                        "constraints": {
                            "required": false,
                            "regex": "^[a-z0-9]{3,24}$",
                            "validationMessage": "The value must be between 3 and 24 characters long and contain only lowercase letters and numbers."
                        }
                    }
                ]
            }
        ],
        "outputs": {
            "StorageAcctName": "[steps('AzureMonitor').StorageAcctName]"
        }
    }
}
